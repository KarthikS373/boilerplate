{
  "env": {
    "node": true,
    "jest": true
  },
  "extends": ["plugin:security/recommended", "plugin:prettier/recommended"],
  "plugins": ["security", "prettier"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021
  },
  "rules": {
    "func-names": "off",
    "no-underscore-dangle": "off",
    "consistent-return": "off",
    "security/detect-object-injection": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}
